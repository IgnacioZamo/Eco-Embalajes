                        </div>
                    </li>
                    <li><a href="">Produccion y desarrollo</a></li>
                    <li>Presupuesto</li>
                    <li>Contacto</li>
                </ul>
            </div>
        </div>

    </div>
</header>

<style>
    .fondoHeader {
        background-color: #324362;
    }

</style>


<script>

const dropDown = document.getElementById("productosDropdown")
const clasesDropDown = dropDown.querySelector(".absolute");

const mostrarDrop = ()=> {
    clasesDropDown.classList.remove("hidden");
    clasesDropDown.classList.add("block");
    clasesDropDown.classList.add("opacity-100");
}

const ocultarDrop = ()=>{
    clasesDropDown.classList.add("hidden");
    clasesDropDown.classList.remove("block");
    clasesDropDown.classList.remove("opacity-100")
}

const toggleDrop = () => {
        clasesDropDown.classList.toggle("hidden");
        clasesDropDown.classList.toggle("block");
        clasesDropDown.classList.toggle("opacity-100");
};

    dropDown.addEventListener("click", toggleDrop);

</script>