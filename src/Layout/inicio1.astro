    <Marcas logo={{img:"https://www.packbox.com.ar/images/FRIAR-LOGO.webp"}}/>
    <Marcas logo={{img:"https://www.packbox.com.ar/images/EPSON-LOGO.webp"}}/>
    <Marcas logo={{img:"https://www.packbox.com.ar/images/FEFCO-LOGO.webp"}}/>
    <Marcas logo={{img:"https://www.packbox.com.ar/images/KONGSBERG-LOGO.webp"}}/>

    

</div>


<script>
let sliderInner = document.getElementById("sliderInner");
let index = 0;
const cantidadImagenes = sliderInner.querySelectorAll("div img");

let intervalId;

// Función para avanzar el slider
function avanzarSlider() {
    let porcentaje = index * -101;
    sliderInner.style.transform = "translateX("+ porcentaje + "%)";
    index ++;
    if (index > cantidadImagenes.length - 1){
        index = 0;
    }
}

// Inicializar el setInterval y guardar el intervalId
intervalId = setInterval(avanzarSlider, 5500);

// Detener el intervalo cuando el mouse entra en una imagen y reanudarlo cuando sale
cantidadImagenes.forEach(function(imagen) {
    imagen.addEventListener("mouseover", function() {
        clearInterval(intervalId); // Detener el setInterval
    });
    imagen.addEventListener("mouseout", function() {
        intervalId = setInterval(avanzarSlider, 5500); // Reanudar el setInterval
    });
});

</script>